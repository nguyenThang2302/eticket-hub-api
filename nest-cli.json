{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "api/mail/template/*.hbs", "watchAssets": true },
      { "include": "i18n/**/*", "watchAssets": true },
      { "include": "database/data/*.json", "watchAssets": true},
      { "include": "database/data/*.csv", "watchAssets": true}
    ]
  }
}
